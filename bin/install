#!/bin/bash

# install script
#
# This script runs init, installs drush, runs build, starts drush runserver and then runs test.
#
# FLAG OPTIONS
#
# -travis
#   Used by Travis to run some commands that it needs. Should not be used otherwise
#
# -webroot somevalue
#   The default webroot is 'www' but you can specifiy a different directory if
#   desired.
#

cd $(git rev-parse --show-toplevel)
PATH=$PWD/bin:$PATH

# VARIABLES
# Grab the command flags passed as arguments
options=$@
arguments=($options)
index=0

# Set flag defaults
travis=0
webroot="webroot"

# Set passed flags
for argument in $options
  do
    # Incrementing index
    index=`expr $index + 1`

    # The conditions
    case $argument in
      -travis)
        travis=1 ;;
      -webroot)
        webroot=${arguments[index]} ;;
    esac
done

# Install Drush
echo "--- Installing Drush ---"
pear channel-discover pear.drush.org
pear install drush/drush
echo ""

# Build the site
if [ "$travis" == '1' ];
  then
    # Refresh the PHP path for Travis
    phpenv rehash

    # Run build
    ./bin/build
  else
    # Run init to get things ready and pass the webroot this will also run build
    ./bin/init -webroot=${webroot}
fi

# Create the database
mysql -e 'create database drupal;'

# Run Drush site install
cd ${webroot}
drush si standard --db-url=mysql://root:@localhost/drupal --yes

# Clear the cache
drush cc all

# Start up the drush server
drush runserver --server=builtin 8080 &
sleep 4

# Only run test if not Travis
if [ "$travis" == '0' ];
  then
    # Run tests
    ./bin/test -webroot=${webroot}
fi
